{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Ver empresa
{% endblock %}

{% block body %}

    <div class="container-fluid">
     
       <!-- Page-Title -->
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="float-right">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">Empresas</li>
                            <li class="breadcrumb-item">Ver empresa</li>
                        </ol><!--end breadcrumb-->
                    </div><!--end /div-->
                    <h4 class="page-title">Ver empresa</h4>
                </div><!--end page-title-box-->
            </div><!--end col-->
        </div><!--end row-->
        <!-- end page title end breadcrumb -->

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <h5 class="card-header bg-primary text-white mt-0"> Empresa</h5>
                    <div class="card-body">

    
                        <dl class="row mb-0">
                            <dt class="col-sm-2">Id</dt>
                            <dd class="col-sm-10">{{ empresa.id }}</dd>

                            <dt class="col-sm-2">Nombre</dt>
                            <dd class="col-sm-10">{{ empresa.nombre }}</dd>

                            <dt class="col-sm-2">telefono</dt>
                            <dd class="col-sm-10">{{ empresa.telefono }}</dd>

                            <dt class="col-sm-2">Correo electr√≥nico</dt>
                            <dd class="col-sm-10">{{ empresa.email }}</dd>

                            <dt class="col-sm-2">Sector</dt>
                            <dd class="col-sm-10">{{empresa.Sector.nombre }}</dd>
                             
                        </dl>

                        <hr class="my-4">

                        <div id="page-content">
                            <div class="content-box">

                                <div class="content-box-wrapper">


                                    <div class="form-group" style="margin-top: 10px;">
                                        <a class="btn btn-outline-success waves-effect waves-light" href="{{ path('empresa_index') }}">
                                            <i class="glyph-icon icon-list" aria-hidden="true"></i>
                                            Volver al listado
                                        </a>
                                        <a class="btn btn-primary"
                                           href="{{ path('empresa_edit', { 'id':  empresa.id }) }}">
                                            <i class="glyph-icon icon-pencil" aria-hidden="true"></i>
                                            Editar
                                        </a>
                                      
                                    </div>

                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
 
{% endblock %}
