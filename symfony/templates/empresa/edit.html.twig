{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Editar empresa
{% endblock %}

{% block body %}


    <div class="container-fluid">

        <!-- Page-Title -->
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    
                    <h4 class="page-title">Edici√≥n de empresa</h4>
                </div><!--end page-title-box-->
            </div><!--end col-->
        </div><!--end row-->
        <!-- end page title end breadcrumb -->

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <h5 class="card-header bg-primary text-white mt-0"> Editar empresa: {{ empresa.nombre }}</h5>
                    <div class="card-body">

                        <div id="page-content">
                            <div class="row">
                                <div class="col-md-12">
                                    {% for type, flashMessages in app.session.flashbag.all() %}
                                        {% for flashMessage in flashMessages %}
                                            <div class="alert alert-{{ type }}">
                                                {{ flashMessage|raw }}
                                            </div>
                                        {% endfor %}
                                    {% endfor %}
                                </div>
                            </div>

                            <div class="clearfix">&nbsp;</div>

                            <div class="content-box">

                                <div class="content-box-wrapper">

                                    {{ form_start(form) }}
                                  <div class="row">    
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                {{ form_row(form.nombre) }}
                                            </div>
                                        </div>

                         
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                {{ form_row(form.telefono) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row"> 
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                {{ form_row(form.email) }}
                                            </div>
                                        </div>
                                         
                                         <div class="col-md-6">
                                            <div class="form-group">
                                                {{ form_row(form.sector) }}
                                            </div>
                                        </div>
                                    </div>
                                    {{ form_widget(form) }}

                                    <div class="clearfix">&nbsp;</div>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="glyph-icon iicon-elusive-ok" aria-hidden="true"></i> Guardar
                                    </button>

                                    {{ form_end(form) }}

                                    <hr class="my-4">

                                    <div class="form-group" style="margin-top: 10px;">
                                        <a class="btn btn-outline-success waves-effect waves-light" href="{{ path('empresa_index') }}">
                                            <i class="glyph-icon icon-list" aria-hidden="true"></i>
                                            Volver al listado
                                        </a>
                                      
                                    </div>

                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

