{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Nuevo sector
{% endblock %}

{% block body %}
    <div class="container-fluid">

        <!-- Page-Title -->
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="float-right">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="">Sector</a></li>
                            <li class="breadcrumb-item"><a href="">Crear sector</a></li>
                        </ol><!--end breadcrumb-->
                    </div><!--end /div-->
                    <h4 class="page-title">Creaci√≥n de sector</h4>
                </div><!--end page-title-box-->
            </div><!--end col-->
        </div><!--end row-->
        <!-- end page title end breadcrumb -->

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <h5 class="card-header bg-primary text-white mt-0"> Crear nuevo sector</h5>
                    <div class="card-body">

                        <div id="page-content">
                            <div class="row">
                                <div class="col-md-12">
                                    {% for type, flashMessages in app.session.flashbag.all() %}
                                        {% for flashMessage in flashMessages %}
                                            <div class="alert alert-{{ type }}">
                                                {{ flashMessage|raw }}
                                            </div>
                                        {% endfor %}
                                    {% endfor %}
                                </div>
                            </div>

                            <div class="clearfix">&nbsp;</div>
                            
                            
                            {{ form_start(form) }}

                            <div class="row">  
                                      
    
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                {{ form_row(form.nombre) }}
                                            </div>
                                        </div>
                           </div>

                            <div class="content-box">
            
                                <div class="content-box-wrapper">
                                    {{ form_widget(form) }}

                                    <div class="clearfix">&nbsp;</div>

                                      <button type="submit" name="submit" value="save" class="btn btn-primary">
                                        Guardar <i class="glyph-icon icon-elusive-ok" aria-hidden="true"></i>
                                    </button>                                   
                                </div>
                            </div>

                            {{ form_end(form) }}

                            <hr class="my-4">

                            <div class="form-group" style="margin-top: 10px;">
                                <a class="btn btn-outline-success waves-effect waves-light" href="{{ path('sector_index') }}">
                                    <i class="glyph-icon icon-list" aria-hidden="true"></i>
                                    Volver al listado
                                </a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}

